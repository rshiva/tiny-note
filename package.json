{
  "name": "electron-react-app",
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "start": "vite --host",
    "build": "vite build",
    "electron:serve": "wait-on tcp:5173 && electron .",
    "postinstall": "electron-builder install-app-deps",
    "electron:build": "npm run build && electron-builder -c.extraMetadata.main=build/electron.js",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run start\" \"npm run electron:serve\""
  },
  "build": {
    "extends": null,
    "appId": "com.example.electron-react",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.utilities"
    }
  },
  "devDependencies": {
    "@electron/remote": "^2.1.2",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^34.1.1",
    "electron-builder": "^25.1.8",
    "@electron/rebuild": "^3.6.0",
    "wait-on": "^8.0.2"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-quill": "^2.0.0",
    "vite": "^6.1.0",
    "better-sqlite3": "^11.8.1"
  }
}